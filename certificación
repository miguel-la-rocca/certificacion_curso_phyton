    def comprar_bicicleta(Bicicleta):
        
        print("Compra de bicicleta\n")
        n_serie = int(input("Nro de numero de serie: "))
        valor = float(input("Valor: "))
        modelo = input("Modelo: ")
        objbicicleta = Bicicleta(n_serie, valor, modelo)
        bicicletas.append(objbicicleta)
        
class Bicicleta:
    

    def __init__(self , n_serie , valor , modelo   ):
        
        self.n_serie=n_serie
        self.valor=valor
        self.modelo=modelo
    def srt (Bicicleta):
        print(Bicileta)
        
    def __setitem__(self , n_serie , valor):
      
      self.bicicleta[n_serie] = valor
      
      return self.bicicleta.get(n_serie, "No se encontro la bicicleta indicada")
  
    def __getprecio__(self,valor):  
        
        return self.bicicleta.valor
    
    def __getn_serie__(self,n_serie):  
        
        return self.bicicleta.n_serie
    
    
    
